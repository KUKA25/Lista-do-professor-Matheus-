#include <stdio.h>
#include <stdlib.h>
#include <locale.h>
main()
{
	setlocale(LC_ALL,"Portuguese");
	int numero,antecessor,sucessor;
	printf("\t\t \n\n\n Programa para encontrar o antecessor e sucessor de um numero");
	printf("\nDigite um numero: ");
	scanf("%i",&numero);
	antecessor=numero-1;
	sucessor=numero+1;
	printf("\n o antecessor= %i",antecessor);
	printf("\n o sucessor= %i",sucessor);
	

}
